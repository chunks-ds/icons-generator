{
  "compilerOptions": {
    "outDir": "./tmp",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
